<div class='flex justify-end'>
 <%=link_to 'Calendar', calendar_path, class: 'px-3 py-1.5 border hover:bg-green-300 text-xl text-green-400 rounded-lg shadow-sm mr-4'%>
 <%= link_to 'New Event', new_event_path, class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-sm' %>
</div>
    
<div class='w-full flex-col'>
    <div>
     <h1 ><%= Time.now.to_s[10..15]%></h1>
     <h1 ><%=Date.today.to_s%></h1>
    </div>

    <div class=' flex justify-between  mt-10'>

     <div class='w-1/3 flex border jusity-between border-cyan-400 bg-cyan-300 rounded-lg items-center p-4 mr-6'>
      <div class='flex-col mr-2'>
       <h1><%=@weather['location']['name']%></h1> 
       <h1><%=@weather['location']['country']%></h1> 
       <h1><%=@weather['location']['lat']%>,<%=@weather['location']['lon']%></h1> 
       <h1><%=@weather['current']['temp_c']%>Â°C</h1> 
      </div>
      <div>
       <img src="<%=@weather['current']['condition']['icon']%>" alt="icon of current weather">
      </div>
     </div>



     <div class='w-2/3 border border-magenta-400 rounded-lg p-4'>
      <h1 class='text-3xl'>Today's events:</h1>     
      <%@month_view[Date.today].each do |event|%>
        <% a = Group.find_by(group: event.group) %>
            <div style="background-color: <%= a.color %>" class="flex-col border rounded-xl p-1">
              <%= link_to event.name, event %>
              <% if event.date_to.nil? || event.date_to == event.date_from %>
                <%= event.time_from.to_s[10..15] %> - <%= event.time_to.to_s[10..15] %>
              <% elsif date == event.date_from %>
                <%= event.time_from.to_s[10..15] %>
              <% elsif date == event.date_to %>
                <%= event.time_to.to_s[10..15] %>
              <% end %>
            </div>

      <%end%>
     </div>
    </div>
</div>

