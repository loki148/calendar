 <%=link_to 'Home', root_path, class: 'px-3 py-1.5  hover:drop-shadow-lg text-gray-500 drop-shadow '%>
<div class='flex justify-end m-2'>
 <%=link_to 'Events', events_path, class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-lg '%>
 <%=link_to 'New Event', new_event_path, class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-lg '%>
</div>
<hr>
<div class='flex justify-between m-4'>
 <%=link_to 'Previous Month', calendar_roll_path(@id-1), class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-lg '%>
 <h1 class='text-3xl'><%=@month_view.keys[0].strftime('%B')%></h1>
 <%=link_to 'Next Month', calendar_roll_path(@id+1), class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-lg '%>
</div>

<div class='flex-col justify-between shadow-md p-4 border border-emerald-400  rounded-3xl'>
    <section class='mt-6 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 lg:grid-cols-7 gap-x-6 gap-y-6'>
        <% @month_view.keys.each do |key| %>
            <div class='flex-col p-1 border border-gray-400  rounded-lg'>
            <%=key%>
            <%@month_view[key].each do |event|%>
            <% a = Group.where(group: "#{event.group}")%>
            <% a = a[0]%>
                <div style="background-color: <%= a.color%>" class="flex-col border rounded-xl p-1">
                 <%=link_to event.name, event%>

                 <% if event.date_to == nil or event.date_to== event.date_from %>
                    <%=event.time_from.to_s[10..15]%>
                    <%=event.time_to.to_s[10..15]%>
                 <% elsif key == event.date_from%>
                    <%=event.time_from.to_s[10..15]%>
                 <% elsif key == event.date_to%>
                    <%=event.time_to.to_s[10..15]%>
                 <%end%>

                </div>
            <%end%>
            </div>


        <%end%>

    </section>
</div>

