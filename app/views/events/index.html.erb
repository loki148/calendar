<div class='flex-col '>
  <div>
   <%=link_to 'back to Calendar', calendar_path, class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-lg '%>
    <div class='flex justify-end'>
     <%=link_to 'New Event', new_event_path, class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-lg '%>
     <%=link_to 'New Group', new_group_path, class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-lg '%>
    </div>
  </div>
  <section class='mt-6 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4  gap-x-6 gap-y-6'>
      <% @events.each do |event| %>
        <% a = Group.where(group: "#{event.group}")%>
        <% a = a[0]%>
        <div style="background-color: <%= a.color %>" class='flex-col justify-between shadow-md p-4 border border-indigo-400 transition duration-300 hover:shadow-lg rounded-2xl'>
          <div class='flex justify-center'>
          <h2 class='text-lg font-medium'><%=link_to event.name, event%></h2>
          </div>
          <div class='p-4 flex-col'>
          <h1><%= event.time_from.to_s[11..15]%>, <%= event.date_from%></h1>
          <h1><%= event.time_to.to_s[11..15]%>, <%= event.date_to%></h1>
          <h1><%= event.body%></h1>
          </div>
          <div class='flex justify-center items-center'>
              <%=link_to 'Edit', edit_event_path(event.id), class: 'px-3 py-1.5 border hover:bg-indigo-400 text-indigo-500 border-indigo-500 rounded-lg shadow-lg '%>
              <%=button_to 'Delete', event, method: :delete, class: 'ml-1 px-3 py-1.5 bg-pink-100 hover:bg-pink-300 opacity-60  hover:shadow-xl text-rose-600 rounded-lg shadow-lg'%>
          </div>
        </div>
      <% end %>
  </section> 
</div>